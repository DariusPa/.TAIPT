@using WebApp.Models
@model AuthorViewModel
@{
    ViewBag.Title = "Add an author";
}
<div class="col-md-12">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    @using (Html.BeginForm("SubmitAuthor", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "card", role = "form" }))
    {
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Name</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Surname</label>
                                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="form-label">Country</label>
                                <select name="Country" id="select-countries" class="form-control custom-select">
                                    <option value="lt" data-data='{"image": "/Content/images/flags/lt.svg"}' selected>Lithuania</option>
                                    <option value="lv" data-data='{"image": "/Content/images/flags/lv.svg"}'>Latvia</option>
                                    <option value="pl" data-data='{"image": "/Content/images/flags/pl.svg"}'>Poland</option>
                                    <option value="de" data-data='{"image": "/Content/images/flags/de.svg"}'>Germany</option>
                                    <option value="br" data-data='{"image": "/Content/images/flags/br.svg"}'>Brazil</option>
                                    <option value="cz" data-data='{"image": "/Content/images/flags/cz.svg"}'>Czech Republic</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-0">
                                <label class="form-label">Description</label>
                                <textarea rows="5" name="Description" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>