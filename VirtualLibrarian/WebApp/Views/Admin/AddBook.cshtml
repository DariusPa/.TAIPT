@using WebApp.Models
@model BookViewModel
@{
    ViewBag.Title = "Add a book";
}
<div class="col-md-12">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    @using (Html.BeginForm("SubmitBook", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "card", role = "form" }))
    {
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Book title</label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="form-label">Author</label>
                        @Html.DropDownListFor(m => m.Author, ViewBag.myAuthors.Items as List<SelectListItem>, htmlAttributes: new { @class = "form-control custom-select" })
                        @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="form-label">Publisher</label>
                        @Html.DropDownListFor(m => m.Publisher, ViewBag.myPublishers.Items as List<SelectListItem>, htmlAttributes: new { @class = "form-control custom-select" })
                        @Html.ValidationMessageFor(m => m.Publisher, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">Genre</label>
                                @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "text-danger" })
                                <div class="selectgroup selectgroup-pills">
                                    @foreach (var genre in ViewBag.genres)
                                    {
                                        <label class="selectgroup-item">
                                            <input type="checkbox" name="Genre[]" value=@genre class="selectgroup-input">
                                            <span class="selectgroup-button">@genre</span>
                                        </label>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group">
                                <label class="form-label">ISBN</label>
                                @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ISBN, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="form-label">Quantity</label>
                                @Html.TextBoxFor(m => m.Qty, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Qty, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Number of pages</label>
                                @Html.TextBoxFor(m => m.Pages, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Pages, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-0">
                        <label class="form-label">Description</label>
                        <textarea rows="5" name="Description" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>
