
@section Styles {
    <style>
        body {
            background: black !important;
        }

        video, canvas {
            margin-left: 230px;
            margin-top: 120px;
            position: absolute;
        }
    </style>
}
<div class="demo-frame">
    <div class="demo-container">
        <video id="video" width="320" height="240" preload autoplay loop muted></video>
        <canvas id="canvas" width="320" height="240"></canvas>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/trackingjs")
<script>
window.onload = function() {
      var video = document.getElementById('video');
      var canvas = document.getElementById('canvas');
      var context = canvas.getContext('2d');
      var tracker = new tracking.ObjectTracker('face');
    var stopRequestAnimationFrame = false;
  tracker.setInitialScale(6);
  tracker.setStepSize(2);
  tracker.setEdgesDensity(0.1);
    const trackingTask = tracking.track('#video', tracker, { camera: true });
    trackingTask.run();
    var dataURI = "";

        var stringArray = new Array();
        var i = 0;

      tracker.on('track', function(event) {
        context.clearRect(0, 0, canvas.width, canvas.height);
        event.data.forEach(function(rect) {
            if(stopRequestAnimationFrame == false) {
        
                  context.drawImage(video, rect.x + 15, rect.y, video.width + rect.x + 11, video.height + rect.y + 22, 0, 0, video.width, video.height);
                  dataURI = canvas.toDataURL('image/png');

                if(i > 8) {
                var postData = { values: stringArray };

                    stopRequestAnimationFrame = true;
                    $.ajax({
                      url: "/Account/RegisterBitmap",
                      data: postData,
                      traditional: true,
                      type: 'post',
                      success: function(data) {

                        alert("@ViewBag.Name Camera trained. Registered.");
                        @*window.location.href='/Account';*@
                      },
                      error: function() {
                        alert('error');
                      }
                    });
                } else {
                    stringArray[i] = dataURI;
                    i++;
                    setTimeout(function () {
                        trackingTask.stop();
                        trackingTask.run();
                    }, 50);
                }
            }
            trackingTask.stop();
      });
    });
    };</script>
}