@using WebApp.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Log in"; }

<div class="row">
    <div class="col-md-4 text-center rightside d-block d-md-none">
        <h1 class="logo">.TAIPT</h1>
        <h2 class="subtitle">virtual library<br />application</h2>
        <button class="login mt-2 mb-3 hvr-grow" onClick='redirectToDashboard("/Account/Connect")'>LOG IN</button>
    </div>
    <div class="col-md-7">
        <div class="col-12 col-md-11 col-lg-9 col-xl-6 mx-auto p-5 mt-2 mt-md-5 text-center text-md-left">
            <h1 class="welcome mt-0 mt-md-5">Welcome!</h1>
            <div class="subtitle">Not registered? <strong>Sign up!</strong></div>
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mt-5 col-12 form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control w-100" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control w-100" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control w-100" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">CONTINUE</button>
                </div>
            }
        </div>
    </div>
    <div class="col-md-5 text-center rightside d-none d-md-block">
        <h1 class="logo">.TAIPT</h1>
        <h2 class="subtitle">virtual library<br />application</h2>
        <button class="login mt-5 hvr-grow" onClick='redirectToDashboard("/Account/Connect")'>LOG IN</button>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/app")
}